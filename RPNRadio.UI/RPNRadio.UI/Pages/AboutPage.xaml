                                    <TapGestureRecognizer Command="{Binding CopyCommand}" CommandParameter="3G4ioUhRb6oLSKJwC11FQVn2KwF8knkJAa" />
                                </Span.GestureRecognizers>
                            </Span>
                        </FormattedString>
                    </Label.FormattedText>
                </Label>-->

                <BoxView
                    Margin="0,20"
                    BackgroundColor="Gray"
                    HeightRequest="1" />

                <Label
                    FontAttributes="Bold"
                    FontSize="Title"
                    Text="Credits" />

            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</views:MvxContentPage>
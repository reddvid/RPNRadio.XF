<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary
    x:Class="RPNRadio.UI.Resources.Styles"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <Style x:Key="PrimaryButton" TargetType="Button">
        <Setter Property="TextColor" Value="{DynamicResource PrimaryTextColor}" />
        <Setter Property="BackgroundColor" Value="{DynamicResource PrimaryColor}" />
        <Setter Property="BorderColor" Value="{DynamicResource SecondaryColor}" />
        <Setter Property="BorderRadius" Value="25" />
        <Setter Property="BorderWidth" Value="1" />
        <Setter Property="CornerRadius" Value="20" />
        <Setter Property="FontFamily" Value="FiraSans#600" />
        <Setter Property="FontSize" Value="{DynamicResource SmallTextSize}" />
        <Setter Property="HeightRequest" Value="50" />
    </Style>
    
</ResourceDictionary>
